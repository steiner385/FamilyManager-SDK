{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./core/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@contexts/*": ["./contexts/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "e2e/**/*",
    "src/testing/**/*",
    "src/core/testing/**/*",
    "src/examples/**/*",
    "test/**/*",
    "tests/**/*"
  ]
}
