{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "react", "react-dom"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
