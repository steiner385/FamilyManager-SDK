{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node", "jest", "react", "react-dom"],
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./types/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
