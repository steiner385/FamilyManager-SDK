{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/core",
    "rootDir": "..",
    "tsBuildInfoFile": "../../dist/core/.tsbuildinfo",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
