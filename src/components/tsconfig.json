{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/components",
    "rootDir": "..",
    "tsBuildInfoFile": "../../dist/components/.tsbuildinfo",
    "jsx": "react-jsx",
    "types": ["node", "react", "react-dom", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@testing/*": ["testing/*"],
      "@types/*": ["types/*"],
      "@contexts/*": ["contexts/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../hooks/**/*.ts",
    "../hooks/**/*.tsx"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../core" }
  ]
}
