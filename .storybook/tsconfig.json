{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "../src/stories/LoadingSpinner.stories.tsx",
    "./preview.tsx",
    "./main.ts"
  ],
  "exclude": ["../node_modules"]
}
